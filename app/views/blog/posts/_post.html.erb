<div class="col-sm-6 col-lg-4">
    <div class="card mb-3 border-0">

      <%= link_to post do %>
          <img class="card-img-top img-fluid" src="<%= post.banner_image_url %>" alt="Post Image">
      <% end %>
      <div class="card-body">
        <h4 class="card-title"><%= link_to post.title, post %></h4>
        <p class="tags"><%= raw post.tags.map{ |t| link_to t.name, posts_path(tag: t.name) }.join(', ')  %></p>
        <p class="card-subtitle mb-2 text-muted"><%= post.display_day_published %></p>
        <%= link_to post do %>
            <p class="card-text lead"><%= truncate(post.description, length:130) %></p>
        <% end %>

      </div>
    </div>

</div>