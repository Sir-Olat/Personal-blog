<% provide(:page_title, 'Update Profile') %>

<div class="row justify-content-center">
  <div class="col-md-6">
  <!--Basic Information Section-->
    <%= form_tag authors_info_path, method: :put do %>
        <%= fields_for :author do |f| %>
          <div class="card">
            <div class="card-body">
              <div class="card-title">
                Profile Information
              </div>
            </div>

            <ul class="list-group list-group-flush">

              <li class="list-group-item">
                <div class="field">
                  <%= image_tag(current_author.gravatar_image_url) %>
                </div>
              </li>
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :name %>
                  <%= f.text_field :name, value: current_author.name, class: 'form-control' %>
                </div>
              </li>

              <li class="list-group-item">
                <div class="field">
                  <%= f.label :email %>
                  <%= f.text_field :email, value: current_author.email, class: 'form-control' %>
                </div>
              </li>
              <li class="list-group-item">
                <div class="field">
                  <%= f.label :bio %>
                  <%= f.text_area :bio, value: current_author.bio,  class: 'form-control' %>
                </div>
              </li>

              <li class="list-group-item">
                <div class="field">
                  <%= f.submit 'Update Profile',  class: 'btn btn-primary' %>
                </div>
              </li>

            </ul>
          </div>

        <% end %>

      <% end %>
    </div>

</div>
