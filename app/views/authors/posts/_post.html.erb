<tr>
  <td> <%= link_to post.title, authors_post_path(post) %> </td>
  <td></td>
  <% if post.published? %>
      <td> <%= link_to 'Unpublish', unpublished_authors_post_path(post), method: :put, class: 'btn btn-sm btn-primary' %> </td>
  <% else %>
      <td> <%= link_to 'Publish', published_authors_post_path(post), method: :put, class: 'btn btn-sm btn-success' %> </td>
  <% end %>
  <td> <%= link_to 'Edit', edit_authors_post_path(post), class: 'btn btn-sm btn-warning' %> </td>
  <td> <%= link_to 'Remove', authors_post_path(post), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: 'Are you sure?'} %> </td>
</tr>